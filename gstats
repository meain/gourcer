#!/bin/sh

set -e

curl "$(cat repo)" > /tmp/gh-repo-page
cat repo | awk '{print "Url: "$0}'
cat repo | sed 's|https://[^/]*/\([^/]*\)/\([^/]*\)|Author: \1#Repo: \2|' | tr '#' '\n'
cat /tmp/gh-repo-page | grep -C1 'f4 mt-3' | grep -v 'f4 mt-3' | grep '.' | sed 's|^\ *||' | awk '{print "Description: "$0}'
if cat repo | grep -q '//github.com/'; then
	cat /tmp/gh-repo-page |
		grep -C 1 'social-count' | grep 'this repository' | grep -oE 'aria-label="[0-9]+ users' | grep -oE '[0-9]+' | xargs echo | awk '{print "Watching: "$1"\nStarred: "$2"\nForked: "$3}'
	printf "Languages: "
	cat /tmp/gh-repo-page|grep 'Progress-item'|grep -o 'aria-label="[^"]*' | awk -F'"' '{print $2"% | "}' | xargs echo | sed 's/..$//'
fi

cd crepo || exit 1

echo "Total commits: $(git rev-list --count HEAD)"
echo "Initial commit: $(git log --oneline|tail -1|awk '{print $1}'|xargs git show|grep -E '^Date:'|sed 's|Date:\ *||')"
echo "Total number of files: $(find . -type f|wc -l)"
echo "Total number of lines: $(find . -type f|wc -l)"
echo "Number of contributers: $(git shortlog -sne|wc -l)"
echo "Top 5 contributers:"
git shortlog -sne|head -n5
