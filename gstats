#!/bin/sh

set -e

echo ""
echo ""
echo "Total commits: $(git rev-list --count HEAD)"
echo "Initial commit: $(git log --oneline|tail -1|awk '{print $1}'|xargs git show|grep -E '^Date:'|sed 's|Date:\ *||')"
echo "Total number of files: $(find . -type f|wc -l)"
echo "Total number of lines: $(find . -type f|wc -l)"
# echo "Number of contributers: $(git shortlog -sne|wc -l)"
# printf "Top 5 contributers:"
# git shortlog -sne|head -n5|sed 's| *[0-9]* *||'
echo ""
echo ""
echo "Built using https://github.com/meain/gourcer"
